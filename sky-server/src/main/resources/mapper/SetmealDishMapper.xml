<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.SetmealDishMapper">
    <insert id="batchInsert" useGeneratedKeys="true" keyProperty="id">
        insert into setmeal_dish (setmeal_id, dish_id, name, price, copies) VALUES
        <foreach collection="setmealDishes" separator="," item="item">
            (#{item.setmealId},#{item.dishId},#{item.name},#{item.price},#{item.copies})
        </foreach>
    </insert>

    <!--   delete in batch according setmeal ids -->
    <delete id="deleteByIds">
        delete from setmeal_dish where setmeal_id in
        <foreach collection="ids" close=")" open="(" separator="," item="id">
            #{id}
        </foreach>
    </delete>
    <select id="getSetmealIdsByDishIds" resultType="java.lang.Long">
        select setmeal_id from setmeal_dish
        where dish_id in
        <foreach item="dishId" collection="dishIds" open="(" separator="," close=")">
            #{dishId}
        </foreach>
    </select>

    <!--   get dish ids according setmeal id -->
    <select id="getDishIdsBySetmealId" resultType="java.lang.Long">
        select s.dish_id
        from setmeal_dish s
        where setmeal_id = #{id}
    </select>
</mapper>
